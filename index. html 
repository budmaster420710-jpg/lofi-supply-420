<script>
    function play(el, file) {
        const audio = document.getElementById('main-audio');
        const tracks = document.querySelectorAll('.track');
        tracks.forEach(t => t.classList.remove('active'));
        el.classList.add('active');
        audio.src = file;
        audio.play();
    }
</script>

